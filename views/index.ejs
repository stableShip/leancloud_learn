<!DOCTYPE HTML>
<html>
  
  <head>
    <title>JIE's Test</title>
  </head>
  
  <body>
    <form id="userInfo">
        要创建的用户名:
       <input type="text" name="username">
       密码:
       <input type="text" name="password">
       <input type="button" value="创建一个用户" id="create">
     <h1/>  
    <input type="button" value="获取用户数据" id="geta" >
    username:
    <input type="text" value="JIE" id="userId">
  </body>
  <script src="http://lib.sinaapp.com/js/jquery/1.9.1/jquery-1.9.1.min.js"></script>
  <script type='text/javascript'>
    $(function(){
    			$('#create').click(function(){
      				$.ajax({
      					type:"post",
      					url:"/user",
                data:$('#userInfo').serialize(),
      					success:function(data){
      							 alert(data);
      					}
    				})
          })
          $('#geta').click(function(){
      				$.ajax({
      					type:"get",
      					url:"/user/"+$('#userId').val(),
      					success:function(data){
        					 alert(data);
      					}
    				})
          });
  })
  </script>

</html>